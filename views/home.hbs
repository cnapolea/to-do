<div class="container">

    <div class="card">
        <h1>My To-Do List</h1>

        {{#if tasks}}
            {{#each tasks}}
            <ul class="list-container">
                <li>
                    <form action="/edit-task/{{_id}}" method="post" class="update-form">
                        <input class="update-field" type="text" name="updatedTask" id="updatedTask" value="{{task}}">
                        <button class="confirm-btn btn">Confirm</button>
                    </form>

                    <p class="task">{{task}}</p>
                    <i class="fas fa-pen update-btn"></i>


                    <button class="cancel-btn btn">Cancel</button>

                    <form action="/delete-task/{{_id}}" method="post">
                        <button class="delete-btn"><i class="fas fa-trash"></i></button>
                    </form>
                </li>
            </ul>
            {{/each}}
        {{/if}}
        <form action="/add-task" method="post">
            <input type="text" name="task" id="task" placeholder="Enter to-do task">
            <button>+</button>
        </form>
    </div>
</div>